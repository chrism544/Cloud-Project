model Theme {
  id          String   @id @default(cuid())
  portalId    String   // Link to existing Portal
  name        String
  description String?
  colors      Json?
  fonts       Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  portal      Portal   @relation(fields: [portalId], references: [id])

  @@index([portalId])
}

model Portal {
  // ... existing fields
  themes Theme[]
}